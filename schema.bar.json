    "theme": {
      "description": "Theme",
      "oneOf": [
        {
          "description": "Default egui theme",
          "type": "string",
          "enum": [
            "Default"
          ]
        },
        {
          "description": "Catpuccin Frappe",
          "type": "string",
          "enum": [
            "CatppuccinFrappe"
          ]
        },
        {
          "description": "Catpuccin Macchiato",
          "type": "string",
